{
  "manifest_version": 3,
  "name": "Plurg",
  "version": "0.0.5",
  "description": "On the go, live stream TV, enjoy sports, entertainment, music, etc. all in one click.",
  "permissions": ["identity", "storage", "windows", "tabs"],
  "icons": {
    "32": "icons/plurg-32.png",
    "64": "icons/plurg-64.png",
    "128": "icons/plurg-128.png"
  },
  "action": {
    "default_icon": {
      "32": "icons/plurg-32.png",
      "64": "icons/plurg-64.png",
      "128": "icons/plurg-128.png"
    },
    "default_title": "Plurg",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": ["https://cmhahjhejmlloijjokahkibknjhlladg.chromiumapp.org/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["hls.min.js", "libs/socket.io.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "script-src": "'self' 'unsafe-eval'",
    "media-src": "https://*",
    "object-src": "'self'"
  }
}
